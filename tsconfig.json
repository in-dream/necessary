{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2015", "ES6", "DOM", "ES2022.String"],
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "types": ["@intlify/unplugin-vue-i18n/messages"],
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@consts": ["consts.ts"],
      "@dynamic/*": ["dynamic/*"],
      "@i18n/*": ["i18n/*"],
      "@stores/*": ["stores/*"],
      "@api/*": ["api/*"]
    }
  }
}
