---
import { Play } from '@vicons/ionicons5';
interface Props {
  avatar: string;
  name: string;
  author: string;
}
const { avatar, name, author } = Astro.props;
---

<div
  class="bg-slate-400 w-72 h-16 rounded flex justify-center items-center overflow-hidden relative select-none"
>
  <img src={avatar} alt="back" class="blur-sm w-full" />
  <div class="absolute w-full h-full flex justify-start items-start">
    <img src={avatar} alt="music-pic" class="w-16 h-16 object-cover" />
    <div class="flex-grow flex justify-between pl-2 h-full pr-3">
      <div class="pt-2">
        <div class="text-xs text-white line-clamp-2">{name}</div>
        <div class="text-xs text-white/75 pt-1">{author}</div>
      </div>
      <div class="flex justify-center cursor-pointer">
        <Play class="w-8 text-white" />
      </div>
    </div>
  </div>
</div>
